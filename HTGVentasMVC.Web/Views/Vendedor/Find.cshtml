@model HTGVentasMVC.Models.vendedor
@{
    ViewBag.Title = Model.nombre + ' ' + Model.apPaterno;
}

<ol class="breadcrumb">
    <li><a href="~/">Vendedor</a></li>
    <li class="active">@(Model.nombre + ' ' + Model.apPaterno)</li>

</ol>

<div class="panel panel-default">
    <div class="panel-heading">Informacion Personal</div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>Código</dt>
            <dd>@Model.idVendedor</dd>

            <dt>Nombre</dt>
            <dd>@Model.nombre</dd>

            <dt>Apellidos</dt>
            <dd>@(Model.apPaterno + ' ' + Model.apMaterno)</dd>

            <dt>DNI</dt>
            <dd>@Model.dni</dd>

            <dt>Teléfono</dt>
            <dd>@Model.telefono</dd>
        </dl>
    </div>
    <div class="form-actions">
        |@Html.ActionLink("Regresar al Listado", "Index")
    </div>
</div>
