@model List<HTGVentasMvc.Models.ViewModels.Productos.ProductosVM>
@{
    ViewBag.Title = "BuscarPorCodigo";
}
<table class="table table-hover table-striped">
    <thead>
        <tr class="bg-primary">
            <th>Código</th>
            <th>Descripción</th>
            <th>Precio Unitario</th>
            <th>Categoria</th>
            <th colspan="3">Operaciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var objProducto in Model)
        {
            <tr>
                <td>@objProducto.idProducto</td>
                <td>@objProducto.nombre</td>
                <td>@objProducto.precioUnitario</td>
                <td>@objProducto.categoria</td>
                <td><a class="btn btn-success" href="~/Producto/Find/@objProducto.idProducto"><span class="glyphicon glyphicon-eye-open"></span>Ver Productos</a></td>
                <td><a class="btn btn-info" href="~/Producto/Update/@objProducto.idProducto"><span class="fa fa-edit"></span></a></td>
                <td><a class="btn btn-danger" href="~/Producto/Delete/@objProducto.idProducto"><span class="fa fa-remove"></span></a></td>

            </tr>
        }
    </tbody>

</table>
